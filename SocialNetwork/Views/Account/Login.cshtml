@model LoginModel

<h1>Здравствуйте</h1>
<h4>Чтобы получить доступ в нашу сеть, вам необходимо войти или зарегистрироваться.</h4>

<h4>Вход в сеть</h4>

<form autocomplete="off" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="UserName">Введите имя пользователя</label><br />
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input type="submit" value="Войти" />
            <a asp-action="Register" asp-controller="Account">Регистрация</a>
        </div>
    </div>
</form>